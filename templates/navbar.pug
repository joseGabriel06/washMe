|{% load i18n %}
nav
  .nav-wrapper
    a.brand-logo(href="{% url 'home' %}")
      |{% if request.user.is_authenticated %}
      |{{ user.username }}
      |{% else %}
      |Logo
      |{% endif %}   
    ul#nav-mobile.right.hide-on-med-and-down	
      |{% if request.user.is_authenticated %}
      li
        a(href="{% url 'auth_password_change' %}") {% trans 'Change password' %}
      li
        a(href="{% url 'auth_logout' %}") {% trans 'Log out' %}
      |{% else %}
      li
        a(href="{% url 'registration_register' %}") {% trans 'Register' %}
      li
        a(href="{% url 'auth_login' %}") {% trans 'Log in' %}
      |{% endif %}
